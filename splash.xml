<?xml version="1.0" encoding="UTF-8"?>
<!-- Theme by pajarorrojo-->
<theme>
  <formatVersion>7</formatVersion>
  	<include lang="es">./_theme_lang/es.xml</include>
	<include lang="fr">./_theme_lang/fr.xml</include>
	<include lang="pt">./_theme_lang/pt.xml</include>
	<include lang="it">./_theme_lang/it.xml</include>

  	<variables>
	  <theme.welcome>Welcome to Playstation X for Batocera </theme.welcome>
    </variables>
     

	<view name="splash">
		<splash name="splash">
			<backgroundColor>003791</backgroundColor>
		</splash>


	<text name="welcome" extra="true">
	   <text >${theme.welcome}</text>
         <pos>0.165 0.05</pos>
         <color>ffffff</color>
         <fontPath>./_theme_inc/fonts/SST Light.ttf</fontPath>
         <fontSize>0.030</fontSize>
         <alignment>left</alignment>
         <glowColor>00000035</glowColor>
         <glowSize>1</glowSize>
         <glowOffset>3 2</glowOffset>
         <zIndex>60</zIndex>    
         <backgroundColor>00000000</backgroundColor>    
      </text>

		<image name="background">
	 		<path>./_theme_inc/images/fond_menu.png</path>
		</image>

		<image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_theme_inc/images/overlay.png</path>
         <zIndex></zIndex>
        </image>
				
		<image name="progressbar">
			<origin>0 0</origin>
			<pos>0.250 0.503</pos>
			<size>0.5 0.04</size>
			<rotation>0</rotation>
			<rotationOrigin>1.1 1.6</rotationOrigin>
			<color>00379169</color>
		</image>

		<text name="label">
			<fontPath>./_theme_inc/fonts/SST Light.ttf</fontPath>
			<pos>0.01 0.503</pos>			
			<color>ffffff</color>
			<fontSize>0.030</fontSize>
		</text>
		
		<image name="progressbar:active">
			<color>003791</color>
			<pos>0.250 0.5</pos>
			<size>-0.08 -0.386</size>
			<rotation>0</rotation>
			<rotationOrigin>1.1 1.6</rotationOrigin>
		</image>
		
	</view>	
</theme>