<?xml version="1.0" encoding="UTF-8"?>
<!-- Theme by pajarorrojo-->
<theme>
	<formatVersion>7</formatVersion>
   <view name="grid">

      
   
   <image name="logo">
		<pos>0.3 0.06</pos>
      <alignment>left</alignment>
      <verticalAlignment>top</verticalAlignment>
		<maxSize>0.2 0.095</maxSize>
      <origin>0 0</origin>
				<!--  png -->
      <path>./_theme_inc/images/logos/${system.theme}.png</path>
      <!--  svg -->
      <path>./_theme_inc/images/logos/${system.theme}.svg</path>
      <!--  svg white -->
      <path>./_theme_inc/images/logos/${system.theme}-w.svg</path>
      <!-- check if lang resources exist -->
      <path>./_theme_inc/images/logos/${system.theme}-${lang}.png</path>
      <path>./_theme_inc/images/logos/${system.theme}-${lang}.svg</path>
		<zIndex>53</zIndex>
   </image>	

   <image name="logo" extra="true" region="eu"/>
    <image name="logo" extra="true" region="us">
    <path>./_theme_inc/images/logos/us/${system.theme}.png</path>
      <!--  svg -->
      <path>./_theme_inc/images/logos/us/${system.theme}.svg</path>
      <!--  svg white -->
      <path>./_theme_inc/images/logos/us/${system.theme}-w.svg</path>
    </image>
    <image name="logo" extra="true" region="jp">
      <path>./_theme_inc/images/logos/jp/${system.theme}.png</path>
      <!--  svg -->
      <path>./_theme_inc/images/logos/jp/${system.theme}.svg</path>
      <!--  svg white -->
      <path>./_theme_inc/images/logos/jp/${system.theme}-w.svg</path>
    </image>


   <imagegrid name="gamegrid">
			<autoLayout>5 2</autoLayout>
			<scrollLoop>true</scrollLoop>
         <gameImage>./../_theme_inc/images/no-image-default.png</gameImage>
			<autoLayoutSelectedZoom>1</autoLayoutSelectedZoom>
			<margin>0.003 0.006</margin>
			<size>0.895 0.41</size>
			<pos>0.052 0.53</pos>
         <scrollSound>./../_theme_inc/sound-effects/scroll.wav</scrollSound>
	      <zIndex>60</zIndex>
		</imagegrid>

	<gridtile name="default">
			<backgroundEdgeColor>${backgroundgrid}</backgroundEdgeColor>
			<padding>8</padding>
			<imageSizeMode>minSize</imageSizeMode>
			<backgroundCornerSize>0 0</backgroundCornerSize>
			<imageColor>ffffffc9</imageColor>
		</gridtile>


		<gridtile name="selected">
			<padding>8</padding>
			<imageColor>ffffffff</imageColor>
			<backgroundCornerSize>0</backgroundCornerSize>
			<backgroundEdgeColor>${backgroundgridSelect}</backgroundEdgeColor>
		</gridtile>

		<image name="gridtile.image">
			<roundCorners>0</roundCorners>
		</image>



		<image name="gridtile.favorite">
			<path>./../_theme_inc/images/favorite-corner.svg</path>
			<pos>0.75 0</pos>
			<maxSize>0.25 0.25</maxSize>
			<horizontalAlignment>right</horizontalAlignment>
			<origin>0 0</origin>
			<color>F3C300</color>
		</image> 



      <text name="logoText" extra="true">
	     <alignment>left</alignment> 
	     <pos>0.065 0.025</pos>
	     <color>FFFFFF</color>
        <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
	     <fontSize>0.062</fontSize>   
        <zIndex>9999</zIndex>        
      </text> 

   <image name="consoles" extra="true">
      <tile>false</tile>
      <pos>0.55 0.17</pos>
      <origin>0 0</origin>
      <alignment>center</alignment> 
      <verticalAlignment>bottom</verticalAlignment>
      <size>0.1 0</size>
      <path>./_theme_inc/images/consoles/${system.theme}.png</path> 
           <storyboard>       
           <animation begin="350" property="y" from="0.17" to="0.171"  duration="150" mode="EaseInOut" autoreverse="true" repeat="forever"/>   
     
      </storyboard>
      <zIndex>99</zIndex>
    
    </image>

   <image name="consoles" extra="true" region="eu"/>
    <image name="consoles" extra="true" region="us">
      <path>./_theme_inc/images/consoles/us/${system.theme}.png</path>
    </image>
    <image name="consoles" extra="true" region="jp">
      <path>./_theme_inc/images/consoles/jp/${system.theme}.png</path>
    </image>	
     
      

      <image name="background" extra="true">
          <origin>0 0</origin>
         <pos>0 0</pos>
	      <zIndex>50</zIndex>
 
      </image>

      <image name="background-art" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_theme_inc/images/background/${system.theme}.jpg</path> 
         <zIndex>45</zIndex> 
      </image>

   <image name="background-art" extra="true" region="eu"/>
    <image name="background-art" extra="true" region="us">
      <path>./_theme_inc/images/background/us/${system.theme}.jpg</path>
    </image>
    <image name="background-art" extra="true" region="jp">
      <path>./_theme_inc/images/background/jp/${system.theme}.jpg</path>
    </image>






      <rating name="md_rating">
			<pos>0.765 0.455</pos>
			<size>0.05 0.05</size>
          <origin>0 0</origin>
         <unfilledColor>${starUnfill}</unfilledColor>
         <color>${starFill}</color>
			<unfilledPath>./../_theme_inc/images/star_empty.svg</unfilledPath>
			<zIndex>51</zIndex>  
			<filledPath>./../_theme_inc/images/star_filled.svg</filledPath>
      <storyboard>       
         <animation property="scale" from="1" to="1.001"  duration="100" mode="easeInOut" autoreverse="true" repeat="forever"/>   
         <animation property="opacity" from="0.9" to="1"  duration="100" mode="easeInOut" autoreverse="true" repeat="forever"/>          
      </storyboard>
		</rating>
   
		<text name="md_genre">
			<pos>0.33 0.450</pos>
			<size>0.41 0.034</size>
			<fontPath>./../_theme_inc/fonts/SST Roman.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<color>${genreColor}</color>
			<zIndex>51</zIndex>
          <origin>0 0</origin>
            <backgroundColor>00000000</backgroundColor>
		</text>
      <datetime name="md_releasedate">
			<pos>0.33 0.470</pos>
          <origin>0 0</origin>
         <alignment>left</alignment> 
         <verticalAlignment>top</verticalAlignment>
         <size>0.027 0.05</size>
			<color>${releaseColor}</color>
         <format>%Y</format>
			<fontPath>./../_theme_inc/fonts/SST Roman.ttf</fontPath>
			<fontSize>0.020</fontSize>
			<zIndex>51</zIndex> 
         <backgroundColor>00000000</backgroundColor>

         
		</datetime>
      
      <text name="md_developer">
			<size>0.38 0.035</size>
          <origin>0 0</origin>
         <verticalAlignment>top</verticalAlignment>
			<pos>0.365 0.477</pos>
			<fontPath>./../_theme_inc/fonts/SST Roman.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<color>${developerColor}</color>
			<zIndex>51</zIndex>
         <backgroundColor>00000000</backgroundColor>

		</text>
      
      <text name="md_description">
         <color>ffffff</color>      
         <pos>0.33 0.255</pos>
         <size>0.570 0.1685</size>
	      <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
         <fontSize>0.026</fontSize>
         <lineSpacing>1.1</lineSpacing>
         <origin>0 0</origin>
          <backgroundColor>00000000</backgroundColor>   
         <zIndex>99</zIndex>     
      </text> 
      <text name="md_name">
         <alignment>left</alignment> 
          <verticalAlignment>top</verticalAlignment>
         <size>0.570 0.010</size>
         <color>ffffff</color>      
         <pos>0.33 0.17</pos>
	      <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
         <fontSize>0.060</fontSize>
         <origin>0 0</origin>
         <glowColor>00000035</glowColor>
          <glowSize>1</glowSize>
          <glowOffset>3 2</glowOffset>  
         <zIndex>99</zIndex>  
         <backgroundColor>00000000</backgroundColor>  
      </text> 
	  
      <image name="md_image">
        <alignment>left</alignment>
        <verticalAlignment>top</verticalAlignment>
        <origin>0 0</origin>
        <pos>0.05 0.18</pos>
        <maxSize>0.25 0.35</maxSize>
        <zIndex>91</zIndex>  
      </image>    

   </view>
<!--INFORMACION DE TIEMPO JUGADO-->
