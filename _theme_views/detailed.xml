<!-- Theme by pajarorrojo-->
<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
   
   <view name="basic, detailed">
      
   <image name="logo">
		<pos>0.04 0.025</pos>
      <alignment>left</alignment>
      <verticalAlignment>bottom</verticalAlignment>
		<maxSize>0.2 0.095</maxSize>
      <origin>0 0</origin>
		<!--  png -->
      <path>./_theme_inc/images/logos/${system.theme}.png</path>
      <!--  svg -->
      <path>./_theme_inc/images/logos/${system.theme}.svg</path>
      <!--  svg white -->
      <path>./_theme_inc/images/logos/${system.theme}-w.svg</path>
      <!-- check if lang resources exist -->
      <path>./_theme_inc/images/logos/${system.theme}-${lang}.png</path>
      <path>./_theme_inc/images/logos/${system.theme}-${lang}.svg</path>
		<zIndex>53</zIndex>
   </image>	

      <text name="logoText" extra="true">
	     <alignment>left</alignment> 
	     <pos>0.065 0.025</pos>
	     <color>FFFFFF</color>
        <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
	     <fontSize>0.062</fontSize>   
        <zIndex>9999</zIndex>        
      </text> 

   <image name="consoles" extra="true">
      <tile>false</tile>
      <pos>0.32 0.16</pos>
      <origin>0 0</origin>
      <alignment>right</alignment> 
      <verticalAlignment>bottom</verticalAlignment>
      <size>0.11 0</size>
      <path>./_theme_inc/images/consoles/${system.theme}.png</path> 
      <storyboard>       
           <animation begin="350" property="y" from="0.16" to="0.161"  duration="150" mode="EaseInOut" autoreverse="true" repeat="forever"/>   
      </storyboard>
      <zIndex>99</zIndex>  
    </image>
	
      <textlist name="gamelist">
         <pos>0.04 0.14</pos>
         <size>0.395 0.815</size>
         <selectorColor>${gamelistSelectorColor}</selectorColor>
         <selectedColor>${gamelistSelectedColor}</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
         <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
         <fontSize>0.037</fontSize>
         <alignment>left</alignment>
	      <lineSpacing>1.45</lineSpacing>
         <scrollSound>./../_theme_inc/sound-effects/scroll.wav</scrollSound>
	      <zIndex>42</zIndex>
      </textlist>
      

      <image name="background" extra="true">
          <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
	      <zIndex>41</zIndex>
 
      </image>

      <image name="art" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_theme_inc/images/background/${system.theme}.jpg</path> 
         <zIndex>40</zIndex> 
       <storyboard>       
         <animation property="opacity" from="0.5" to="0.1" begin="0" duration="9000" mode="easeInOut" autoreverse="true" repeat="forever"/>   
       </storyboard>
      </image>

   <image name="background-extra" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>39</zIndex>
      </image>

      <rating name="md_rating">
			<pos>0.815 0.605</pos>
			<size>0.05 0.05</size>
         <unfilledColor>${starUnfill}</unfilledColor>
         <color>${starFill}</color>
			<unfilledPath>./../_theme_inc/images/star_empty.svg</unfilledPath>
			<zIndex>51</zIndex>  
			<filledPath>./../_theme_inc/images/star_filled.svg</filledPath>
      <storyboard>       
         <animation property="scale" from="1" to="1.001"  duration="100" mode="easeInOut" autoreverse="true" repeat="forever"/>   
         <animation property="opacity" from="0.9" to="1"  duration="100" mode="easeInOut" autoreverse="true" repeat="forever"/>          
      </storyboard>
		</rating>
   
		<text name="md_genre">
			<pos>0.53 0.600</pos>
			<size>0.28 0.034</size>
			<fontPath>./../_theme_inc/fonts/SST Roman.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<color>${genreColor}</color>
			<zIndex>51</zIndex>
            <backgroundColor>00000000</backgroundColor>
		</text>

      <datetime name="md_releasedate">
			<pos>0.53 0.622</pos>
         <alignment>left</alignment> 
         <verticalAlignment>top</verticalAlignment>
         <size>0.027 0.05</size>
			<color>${releaseColor}</color>
         <format>%Y</format>
			<fontPath>./../_theme_inc/fonts/SST Roman.ttf</fontPath>
			<fontSize>0.021</fontSize>
			<zIndex>51</zIndex> 
         <backgroundColor>00000000</backgroundColor>
      </datetime>
      
      <text name="md_developer">
			<size>0.250 0.037</size>
			<pos>0.56 0.628</pos>
			<fontPath>./../_theme_inc/fonts/SST Roman.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<color>${developerColor}</color>
			<zIndex>51</zIndex>
         <backgroundColor>00000000</backgroundColor>
		</text>
      
      <text name="md_description">
         <color>ffffff</color>      
         <pos>0.53 0.680</pos>
         <size>0.430 0.250</size>
	      <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
         <fontSize>0.030</fontSize>
         <lineSpacing>1.1</lineSpacing>
         <zIndex>42</zIndex>     
      </text> 
	  
      <image name="md_image">
         <pos>0.740 0.315</pos>
         <maxSize>0.42 0.56</maxSize>
         <zIndex>91</zIndex>    
      </image>    

	<video name="md_video">
         <pos>0.740 0.305</pos>
         <maxSize>0.42 0.56</maxSize>
         <zIndex>91</zIndex>   
         <effect>none</effect>
         <showSnapshotNoVideo>false</showSnapshotNoVideo>
         <showSnapshotDelay>false</showSnapshotDelay>
	</video>
   </view>
</theme>