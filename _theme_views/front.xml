<!-- Theme by pajarorrojo-->
<theme>
<formatVersion>7</formatVersion>
<view name="system" >
   <image name="logo">
      <path>./_theme_inc/images/caratulas/default.png</path>
      <path>./_theme_inc/images/caratulas/${system.theme}.jpg</path>
      <path>./_theme_inc/images/caratulas/${system.theme}.png</path>
      <tile>false</tile>
      <linearSmooth>true</linearSmooth>		
   </image>

   <image name="logo" extra="true" region="eu"/>
   <image name="logo" extra="true" region="us">
      <path>./_theme_inc/images/caratulas/us/${system.theme}.png</path>
   </image>
   <image name="logo" extra="true" region="jp">
       <path>./_theme_inc/images/caratulas/jp/${system.theme}.png</path>
   </image>

   <carousel name="systemcarousel">
      <systemInfoDelay>5</systemInfoDelay>
      <color>00000000</color>
 		<logoAlignment>top</logoAlignment>
      <scrollSound>./../_theme_inc/sound-effects/scroll-2.wav</scrollSound>	
		<zIndex>80</zIndex>
		<defaultTransition>instant</defaultTransition>  
      <minLogoOpacity ifSubset="video-system:background-option">0.5</minLogoOpacity>
      <minLogoOpacity ifSubset="video-system:NO|small-screen">0.7</minLogoOpacity>	
   </carousel>

      <text name="systemInfo">
        <visible>false</visible>
      </text>

      <text name="systemInfoEx, systemInfoEx2" extra="true">
         <alignment>left</alignment>
         <pos>0.162 0.045</pos>
         <size>0.398 0.055</size>
         <color>FFFFFF</color>
         <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
	      <fontSize>0.030</fontSize>
         <glowColor>00000035</glowColor>
         <glowSize>1</glowSize>
         <glowOffset>3 2</glowOffset>
         <backgroundColor>ff000000</backgroundColor>    
         <zIndex>60</zIndex>	           
      </text>

      <text name="systemInfoEx" extra="true">
            <text>{binding:total} ${GamesNumber}  |  {binding:favorites} ${GamesFavs}  |  {binding:gamesPlayed} ${NumberPlayed}</text>
            <storyboard repeat="2">
               <animation property="opacity" from="1" to="1" duration="1" mode="linear"/>
               <animation property="opacity" from="1" to="0" begin="2500" duration="350" mode="easeOut"  />
               <animation property="opacity" from="0" to="1" begin="7100" duration="350" mode="easeOut"/>
               <animation property="opacity" from="1" to="0" begin="10000" duration="350" mode="easeOut"  />
               <animation property="opacity" from="0" to="1" begin="14100" duration="350" mode="easeOut"/>
            </storyboard>             
      </text>	

      <text name="systemInfoEx2" extra="true">
            <text>${theme.mostplayed} {binding:mostPlayed} </text>
            <storyboard repeat="2">
               <animation property="opacity" from="0" to="0" duration="1" mode="linear"/>
               <animation property="opacity" from="0" to="1" begin="2600" duration="350" mode="easeOut"/>
               <animation property="opacity" from="1" to="0" begin="7000" duration="350" mode="easeOut"  />
               <animation property="opacity" from="0" to="1" begin="10100" duration="350" mode="easeOut"/>
               <animation property="opacity" from="1" to="0" begin="14000" duration="350" mode="easeOut"  />
            </storyboard>             
      </text>	
 
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>41</zIndex>
         <linearSmooth>true</linearSmooth>		
      </image>
      
      <image name="marco-activo" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../_theme_inc/images/marco-activo.png</path>
         <zIndex>99</zIndex>     
      </image>
            
      <image name="background-art" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>40</zIndex> 
         <linearSmooth>true</linearSmooth>		
      </image>	  
	  
	   <text name="start" extra="true">
         <text>${theme.start}</text>
         <size>0.207 0.07</size>
         <backgroundColor>00000069</backgroundColor>
         <alignment>center</alignment> 
         <pos>0.166 0.5</pos>
         <color>FFFFFF</color>
         <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
         <fontSize>0.032</fontSize>   
         <zIndex>45</zIndex>  
      </text>
      	   
      <text name="system_name" extra="true">
	      <alignment>left</alignment> 
	      <pos>0.385 0.54</pos>
         <size>0.6 0.001</size>
	      <color>FFFFFF</color>
         <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
	      <fontSize>0.068</fontSize>  
         <zIndex>45</zIndex>  
         <glowColor>00000035</glowColor>
         <glowSize>1</glowSize>
         <glowOffset>3 2</glowOffset>  
 
      </text>

      <text name="fullName" extra="true">
         <text>${system.fullName}</text>
         <alignment>center</alignment> 
         <pos>0.166 0.135</pos>
         <size>0.208 0.37</size>
         <color>FFFFFF</color>
         <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
         <fontSize>0.036</fontSize>  
         <zIndex>45</zIndex>  
         <glowColor>00000035</glowColor>
         <glowSize>1</glowSize>
         <glowOffset>3 2</glowOffset> 
         <backgroundColor>${menubgColor}</backgroundColor>
            <storyboard>
                <animation property="opacity" from="0" to="0" duration="100"  mode="linear"/>
                <animation property="opacity" from="0" to="1" begin="300" duration="0"  mode="linear"/>   
            </storyboard>
       </text>

        <text name="manufacturerName" extra="static">
           <text>${system.sortedBy}</text>
           <alignment>center</alignment> 
	        <pos>0.166 0.22</pos>
           <size>0.208 0.1</size>
	        <color>FFFFFF</color>
           <fontPath>./../_theme_inc/fonts/SST Bold.ttf</fontPath>
	        <fontSize>0.040</fontSize>  
           <zIndex>45</zIndex>  
           <glowColor>00000035</glowColor>
           <glowSize>1</glowSize>
           <glowOffset>3 2</glowOffset> 
            <storyboard>
                <animation property="opacity" from="0" to="0" duration="100"  mode="linear"/>
                <animation property="opacity" from="0" to="1" begin="300" duration="0"  mode="linear"/>
            </storyboard>

       </text>

      
</view>

</theme>