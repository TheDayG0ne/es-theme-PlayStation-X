<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>

<!-- Gamelist View -->


 
   <view name="basic, detailed">
      <helpsystem name="help">
         <fontPath>./../_theme_inc/fonts/SST Roman.ttf</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>0.064 0.955</pos>      
         <textColor>FFFFFF</textColor>
      </helpsystem>
      
   
      <image name="logo">
		<pos>0.04 0.025</pos>
      <alignment>left</alignment>
      <verticalAlignment>bottom</verticalAlignment>
		<maxSize>0.2 0.095</maxSize>
      <origin>0 0</origin>
		<path>./../$system/logo.png</path>
		<zIndex>53</zIndex>
     <storyboard>       
        <animation property="x" from="-1" to="0.04" duration="400" mode="easeOut"/>
         <animation property="scale" from="1" to="1.008" duration="350" mode="easeInOut" autoreverse="true" repeat="forever"/>   
         <animation property="opacity" from="0.8" to="1" duration="350" mode="easeInOut" autoreverse="true" repeat="forever"/>   

      </storyboard>
      </image>	


      <text name="logoText" extra="true">
	     <alignment>left</alignment> 
	     <pos>0.065 0.025</pos>
	     <color>FFFFFF</color>
        <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
	     <fontSize>0.062</fontSize>   
        <zIndex>9999</zIndex>        
      </text> 

         <image name="consoles" extra="true">
      <tile>false</tile>
      <pos>0.32 0.16</pos>
      <origin>0 0</origin>
      <alignment>right</alignment> 
      <verticalAlignment>bottom</verticalAlignment>
      <size>0.11 0</size>
      <path>./_theme_inc/images/consoles/${system.theme}.png</path> 
      <zIndex>99</zIndex>
    
    </image>
	
      <textlist name="gamelist">
         <pos>0.04 0.14</pos>
         <size>0.39 0.815</size>
         <selectorColor>000000</selectorColor>
         <selectedColor>3CAEFB</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>ffffff</secondaryColor>
         <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
         <fontSize>0.037</fontSize>
         <alignment>left</alignment>
	 <lineSpacing>1.45</lineSpacing>
         <scrollSound>./../_theme_inc/sound-effects/scroll.wav</scrollSound>
	<zIndex>42</zIndex>
      </textlist>

      <image name="background" extra="true">
          <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./../_theme_inc/images/default-detailed.png</path>
	  <zIndex>41</zIndex>
 
      </image>

      <image name="art" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../$system/background.jpg</path>
         <zIndex>40</zIndex> 
                <storyboard>       
         <animation property="opacity" from="0.9" to="0.6" begin="0" duration="5500" mode="easeInOut" autoreverse="true" repeat="forever"/>   

      </storyboard>
      </image>

            <video name="default_background" extra="true">
  <pos>0 0</pos>
         <size>1 1</size>
         <path>./../_theme_inc/videos/background-psx.mp4</path>
         <zIndex>39</zIndex>   
	</video>
      <image name="background-extra" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>

         <path>./../_theme_inc/images/fond_menu.png</path>
         <zIndex>38</zIndex>
      </image>
	  
      <text name="md_publisher, md_playcount, md_players">
         <pos>2 2</pos> <size>0 0</size>
         <fontSize>0.0</fontSize>
         <zIndex>0</zIndex>
      </text>
  
		
	  <datetime name="md_lastplayed">
	  <pos>2 2</pos>
		<fontSize>0.00</fontSize>
		<size>0 0</size><zIndex>0</zIndex>
	</datetime>
	
      <text name="md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
         <pos>2 2</pos>
         <size>0 0</size>
		 <fontSize>0.0</fontSize>
		 <zIndex>0</zIndex>
      </text>


      <text name="md_genre">
			<pos>0.53 0.600</pos>
			<size>0.220 0.034</size>
			<fontPath>./../_theme_inc/fonts/SST Roman.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<color>F3C300</color>
			<zIndex>51</zIndex>
		</text>

		<text name="md_developer">
			<size>0.220 0.037</size>
			<pos>0.610 0.631</pos>
			<fontPath>./../_theme_inc/fonts/SST Roman.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<color>F3C300</color>
			
			<zIndex>51</zIndex> 
		</text>


      		<rating name="md_rating">
			<pos>0.815 0.605</pos>
			<size>0.05 0.05</size>
			<filledPath>./../_theme_inc/images/star_filled.svg</filledPath>
			<unfilledPath>./../_theme_inc/images/star_empty.svg</unfilledPath>
			<zIndex>51</zIndex>
		</rating>
		<datetime name="md_releasedate">
			<pos>0.53 0.625</pos>
			<color>cccccc</color>
			
			<fontPath>./../_theme_inc/fonts/SST Roman.ttf</fontPath>
			<fontSize>0.020</fontSize>
			<zIndex>51</zIndex> 
		</datetime>
	  
	  		
	  

	  
      <text name="md_description">
         <color>ffffff</color>      
         <pos>0.53 0.680</pos>
         <size>0.430 0.250</size>
	 <fontPath>./../_theme_inc/fonts/SST Light.ttf</fontPath>
         <fontSize>0.030</fontSize>
          <lineSpacing>1.1</lineSpacing>
         <zIndex>42</zIndex>         
      </text> 
	  
      <image name="md_image">
          <pos>0.740 0.315</pos>
         <maxSize>0.42 0.56</maxSize>
         <zIndex>91</zIndex>     
               <storyboard>
         <animation property="x" from="1.5" to="0.740" duration="400" mode="easeOut"/>
         <animation property="opacity" from="0.8" to="1" duration="400" mode="easeIn"/>      
            
              
      </storyboard>     
      </image>    

	   <video name="md_video">
         <pos>0.740 0.305</pos>
         <maxSize>0.42 0.56</maxSize>
         <zIndex>91</zIndex>   
         <effect>none</effect>
	</video>
   </view>

</theme>