<!--OPCIONES DE VISTA DETALLADA-->

<subset name="detailed-origin" displayName="${theme.detailedorigin}" appliesTo="detailed,">
	<include name="image" displayName="image" />
	<include name="thumbnail" displayName="thumbnail" />
	<include name="marquee" displayName="marquee" />

</subset>  

<!--OPCIONES DE VISTA CUADRICULA-->

<subset name="grid-main-origin" displayName="${theme.gridMainorigin}" appliesTo="grid">
	<include name="image" displayName="image" />
	<include name="thumbnail" displayName="thumbnail" />
	<include name="marquee" displayName="marquee" />
</subset>  

<subset name="grid-origin" displayName="${theme.gridorigin}" appliesTo="grid">
	<include name="thumbnail" displayName="thumbnail">./_theme_options/gridview/grid_thumbnail.xml</include>
	<include name="image" displayName="image">./_theme_options/gridview/grid_image.xml</include>
	<include name="marquee" displayName="marquee">./_theme_options/gridview/grid_marquee.xml</include>
</subset> 

<!--OPCIONES DE SNAPVIDEO-->

<subset name="grid-video" displayName="${theme.gridvideo}" appliesTo="detailed, grid">
	<include name="in-grid" displayName="${yes}">./_theme_options/videotype/grid_video.xml</include>
	<include name="background" displayName="${theme.backgroundVideoOption}">./_theme_options/videotype/background_video.xml</include>
	<include name="off" displayName="${VideoOff}"/>

</subset>  

<!--AUDIO VIDEOSNAP ON/OFF-->

<subset name="videosnap-audio" displayName="${theme.videoSnapAudio}" appliesTo="detailed, grid" ifSubset="grid-video:in-grid|background" >
	<include name="enable-audio" displayName="${yes}"/>
	<include name="disable-audio" displayName="${no}">./_theme_options/videotype/no-audio.xml</include>
</subset>

<!--OPCIONES DE RETARDO DE VIDEO-->
<subset name="video-gamelist-delay" displayName="${theme.videoGamelistDelay}" appliesTo="detailed, grid" ifSubset="grid-video:in-grid|background">
	<include name="1sec" displayName="1s">./_theme_options/video_delay/gamelist-video-1s.xml</include>
	<include name="2sec" displayName="2s">./_theme_options/video_delay/gamelist-video-2s.xml</include>
	<include name="3sec" displayName="3s">./_theme_options/video_delay/gamelist-video-3s.xml</include>
	<include name="0sec" displayName="0s">./_theme_options/video_delay/gamelist-video-0s.xml</include>	
	<include name="05sec" displayName="0.5s">./_theme_options/video_delay/gamelist-video-05s.xml</include>	
</subset>

