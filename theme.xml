<subset name="system-username" displayName="${theme.username}">
	<include name="batocera" displayName="Batocera">./_theme_options/usernames/batocera.xml</include>
	<include name="custom" displayName="${custom}">./custom-username.xml</include>
	<include name="cloud" displayName="Cloud Strife">./_theme_options/usernames/cloud.xml</include>
