<!-- Theme by pajarorrojo-->
<theme>
    <formatVersion>7</formatVersion>
	<include>./$system/custom.xml</include>
   	<include>./_theme_inc/your-username-here.xml</include>

	
	<include>./_theme_gamelistview/detailed.xml</include>


	<include>./_theme_systemview/1-black.xml</include>
	
<include subset="iconset" name="1-PSX">./_theme_inc/iconsets/psx.xml</include>
<include subset="iconset" name="2-PSX-color">./_theme_inc/iconsets/psx-color.xml</include>
<include subset="iconset" name="3-XBOX">./_theme_inc/iconsets/xbox.xml</include>
<include subset="iconset" name="4-SNES">./_theme_inc/iconsets/snes.xml</include>
<include subset="iconset" name="5-ARCADE">./_theme_inc/iconsets/arcade.xml</include>

	

<subset name="carousel-size" displayName="Carousel Image Size">
	
	<include name="big">./_theme_options/carousel-big.xml</include>
	<include name="medium">./_theme_options/carousel-standard.xml</include>
	<include name="small">./_theme_options/carousel-small.xml</include>
</subset>

<subset name="video-background" displayName="Show videos in system view">
	<include name="BACKGROUND VIDEO">./_theme_options/enable-video-bg-mute.xml</include>
	<include name="SMALL SCREEN WITH AUDIO">./_theme_options/enable-video-small.xml</include>
	<include name="NO" displayName="${none}">./_theme_options/no-video.xml</include>
</subset>

<subset name="system-description" displayName="Show System descriptions">
	<include name="YES">./_theme_options/enable-system-description.xml</include>
	<include name="NO"/>
</subset>
<subset name="info-bar" displayName="Show theme gamebar">
	<include name="YES">./_theme_options/info-bar.xml</include>
	<include name="NO"/>
</subset>
<subset name="animated-backg" displayName="Animated background (waves)">
	<include name="YES">./_theme_options/animated-background.xml</include>
	<include name="NO"/>
</subset>
 <view name="system">
      <text name="version" extra="true">
         <text>Ver. 2.2</text>
         <pos>0.945 0.951</pos>
         <color>444444</color>
         <fontPath>./_theme_inc/fonts/SST Bold.ttf</fontPath>
	     <fontSize>0.0220</fontSize>
         <alignment>left</alignment>
         <zIndex>41</zIndex>        
      </text>
 </view>	  
	
</theme>
