<?xml version="1.0" encoding="UTF-8"?>
<!-- Theme by pajarorrojo-->
<theme>
	<formatVersion>7</formatVersion>
   <view name="grid">

      <imagegrid name="gamegrid">
			<showVideoAtDelay>-1</showVideoAtDelay>
			
		</imagegrid>

	<video name="md_video" ifSubset="grid-video:background">
      <zIndex>49</zIndex>   
      <effect>none</effect>
      <pos>0 -0.265</pos>
			<size>1 1</size>
			<origin>0 0</origin>
          <storyboard >
            <animation property="opacity" from="0" to="1" duration="1" begin="500" mode="linear"/>
         </storyboard>
	</video>

      <image name="background" extra="true">
         <size>1 1.045</size>        
      </image>
   </view>

   <view name="detailed, basic">
	   <video name="md_video">
         <zIndex>40</zIndex>   
         <effect>none</effect>
         <pos>0 0</pos>
			   <size>1 1</size>
			   <origin>0 0</origin>
         <storyboard >
              <animation property="opacity" from="0" to="1" duration="1" mode="linear"/>
         </storyboard>
	   </video>



   </view>
   

</theme>