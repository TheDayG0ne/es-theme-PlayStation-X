<theme>
     <formatVersion>7</formatVersion>
     <view name="basic, detailed, grid">
          <video name="default_background" extra="true">
               <pos>0 0</pos>
               <size>1 1</size>
               <zIndex>39</zIndex>
          </video>

          <video name="default_background" extra="true" ifSubset="colorset:blue">
               <path>./../_theme_options/colorsets/blue/background-psx-blue.mp4</path>
          </video>

          <video name="default_background" extra="true" ifSubset="colorset:black">
               <path>./../_theme_options/colorsets/black/background-psx-black.mp4</path>
          </video>

          <image name="background-art" extra="true" >
               <storyboard ifSubset="anim-list:YES"><!--revisar tambien en animacion de lista si se cambia la animacion-->
                    <animation  property="scale" from="1.08" to="1" duration="500" mode="easeOut"/>
                    <animation  property="opacity" to="1" duration="1000" mode="easeInOut"/>
                    <animation property="opacity" from="1" to="0" begin="500" duration="8000" mode="easeInOut" autoreverse="true" repeat="forever"/>
               </storyboard>

               <storyboard ifSubset="anim-list:NO">
                    <animation property="opacity" from="1" to="0" begin="500" duration="8000" mode="easeInOut" autoreverse="true" repeat="forever"/>
               </storyboard>
          </image>

     </view>
</theme>
