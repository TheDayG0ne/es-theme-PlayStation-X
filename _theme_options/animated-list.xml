<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<view name="grid">
   <imagegrid name="gamegrid">
			<animateSelection>true</animateSelection>
		</imagegrid>

    <ninepatch name="gridtile.background:selected">
      <animateColor>${backgroundgrid}</animateColor>
      <animateColorTime>400</animateColorTime>
    </ninepatch>
</view>

   <view name="basic, detailed">
    <control name="md_name, md_image, md_description, md_genre, md_developer, md_releasedate, md_publisher, md_lastplayed, md_lbl_lastplayed, md_lbl_playcount,md_rating">
      <clipRect>0 0.16 1 0.78</clipRect>
      <storyboard event="open">
        <animation property="offsetX" from="0.78" to="0" duration="400" mode="easeOutCubic"/>
        <animation property="opacity" from="0" to="1" duration="400" mode="easeIn"/>
      </storyboard>
      <storyboard event="activateNext">
        <animation property="offsetY" from="0.78" to="0" duration="400" mode="easeOutCubic"/>
        <animation property="opacity" from="0" to="1" duration="400" mode="easeOut"/>
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="offsetY" from="-0.78" to="0" duration="400" mode="easeOutCubic"/>
        <animation property="opacity" from="0" to="1" duration="400" mode="easeOut"/>
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="offsetY" to="-0.78" duration="300" mode="easeOutCubic"/>
        <animation property="opacity" to="0" duration="300" mode="easeOut"/>
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="offsetY" to="0.78" duration="300" mode="easeOutCubic"/>
        <animation property="opacity" to="0" duration="300" mode="easeOut"/>
      </storyboard>
    </control>
  </view>


  <view name="grid">
    <control name="md_name, md_image, md_description, md_genre, md_developer, md_releasedate, md_publisher, md_lastplayed, md_lbl_lastplayed, md_lbl_playcount,md_rating">
      <clipRect>0 0.16 1 0.78</clipRect>
      <storyboard event="open">
        <animation property="offsetY" from="-1" to="0" duration="400" mode="easeOutCubic"/>
        <animation property="opacity" from="0" to="1" duration="400" mode="easeIn"/>
      </storyboard>
      <storyboard event="activateNext">
        <animation property="offsetX" from="1" to="0" duration="400" mode="easeOutCubic"/>
        <animation property="opacity" from="0" to="1" duration="400" mode="easeOut"/>
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="offsetX" from="-1" to="0" duration="400" mode="easeOutCubic"/>
        <animation property="opacity" from="0" to="1" duration="400" mode="easeOut"/>
      </storyboard>
      <storyboard event="deactivateNext">
          <animation property="opacity" to="0" duration="1" mode="easeOut"/>
      </storyboard>
      <storyboard event="deactivatePrev">
          <animation property="opacity" to="0" duration="1" mode="easeOut"/>
       </storyboard>     
    </control>
  </view>


