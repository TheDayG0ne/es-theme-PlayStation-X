<theme>
  <formatVersion>7</formatVersion>

  <view name="basic, detailed, grid">

    
    <image name="consoles" extra="true">
      <storyboard>
        <animation property="offsetX" from="-0.2" to="0" duration="400" mode="easeOutCubic"/>
        <animation property="opacity" from="0" to="1" duration="400" mode="easeIn"/>
      </storyboard>
    </image>

    <image name="logo" extra="true">
      <storyboard>
        <animation property="opacity" from="0" duration="400" mode="easeIn"/>
      </storyboard>
    </image>

  </view>

  <view name="grid">


    <control name="md_name, md_image, md_description, md_genre, md_developer, md_releasedate, md_publisher, md_boxart, md_marquee, md_thumbnail,md_boxback,md_fanart,md_titleshot,md_cartridge, md_rating">
      <clipRect>0 0.1 1 0.78</clipRect>
      <storyboard event="open">
        <animation property="opacity" from="0" to="1" duration="300" mode="easeInOut"/>
      </storyboard>
      <storyboard event="activateNext">
        <animation property="offsetX" from="0.78" to="0" duration="300" mode="easeOutCubic"/>
        <animation property="opacity" from="0" to="1" duration="300" mode="easeOut"/>
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="offsetX" from="-0.78" to="0" duration="300" mode="easeOutCubic"/>
        <animation property="opacity" from="0" to="1" duration="300" mode="easeOut"/>
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="offsetX" to="-0.78" duration="300" mode="easeOutCubic"/>
        <animation property="opacity" to="0" duration="300" mode="easeOut"/>
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="offsetX" to="0.78" duration="300" mode="easeOutCubic"/>
        <animation property="opacity" to="0" duration="300" mode="easeOut"/>
      </storyboard>
    </control>
  </view>



  <view name="detailed">

    <control name="md_name, md_image, md_description, md_genre, md_developer, md_releasedate, md_publisher, md_rating, md_boxart, md_marquee, md_thumbnail, md_boxback, md_fanart, md_titleshot,md_cartridge">
      <clipRect>0 0.16 1 0.78</clipRect>
      <storyboard event="activateNext">
        <animation property="offsetY" from="0.78" to="0" duration="550" mode="easeOutCubic"/>
        <animation property="opacity" from="0" to="1" duration="800" mode="easeOut"/>
      </storyboard>
      <storyboard event="activatePrev">
        <animation property="offsetY" from="-0.78" to="0" duration="550" mode="easeOutCubic"/>
        <animation property="opacity" from="0" to="1" duration="800" mode="easeOut"/>
      </storyboard>
      <storyboard event="deactivateNext">
        <animation property="offsetY" to="-0.78" duration="500" mode="easeOutCubic"/>
        <animation property="opacity" to="0" duration="400" mode="easeOut"/>
      </storyboard>
      <storyboard event="deactivatePrev">
        <animation property="offsetY" to="0.78" duration="500" mode="easeOutCubic"/>
        <animation property="opacity" to="0" duration="400" mode="easeOut"/>
      </storyboard>
    </control>

  </view>

</theme>