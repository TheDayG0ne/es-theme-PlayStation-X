<!-- Theme by pajarorrojo-->
<theme>
   <formatVersion>7</formatVersion>
   <variables>
      <menuSelectedColor>ffffff</menuSelectedColor>
      <menuSelectorColor>666666</menuSelectorColor>
      <menuFontcolor>aaaaaa</menuFontcolor>
      <menuSeparatorColor>555555</menuSeparatorColor>
      <menuGrouptitle>dddddd</menuGrouptitle>
      <menuGroupSeparator>dddddd</menuGroupSeparator>
      <menuTitleColor>DFDCDC</menuTitleColor>
      <menubgColor>010101</menubgColor>
      <backgroundgrid>ffffff80</backgroundgrid>
      <backgroundgridSelect>F3C300</backgroundgridSelect>
      <menuFooter>555555</menuFooter>
      <gamelistSelectedColor>3CAEFB</gamelistSelectedColor>
      <gamelistSelectorColor>000000</gamelistSelectorColor>
      <helpFontColor>DFDCDC</helpFontColor>
      <helpIconColor>DFDCDC</helpIconColor>
      <developerColor>00AC97</developerColor>
      <genreColor>3CAEFB</genreColor>
      <releaseColor>F3C300</releaseColor>
      <starFill>DF0024</starFill>
      <starUnfill>F3C30069</starUnfill>
      <manualOnColor>3CAEFB</manualOnColor>
      <savegameOnColor>3CAEFB</savegameOnColor>
      <cheevosOnColor>F3C300</cheevosOnColor>
      <splash.progressbarActive>111111</splash.progressbarActive>
      <splash.progressbar>ffffff69</splash.progressbar>
      <splash.labelColor>ffffff</splash.labelColor>
      <sistema.lineainferior>DF0024</sistema.lineainferior>
      <sistema.pie>000000cf</sistema.pie>
   </variables>


   <view name="system">
      <image name="background" extra="true">
         <path>./black/background.jpg</path>
      </image>

      <image name="background-art" extra="true">
         <path>./../../_theme_inc/images/background/${system.theme}.jpg</path>
      </image>

      <image name="background-art" extra="true" region="eu"/>
      <image name="background-art" extra="true" region="us">
         <path>./../../_theme_inc/images/background/us/${system.theme}.jpg</path>
      </image>
      <image name="background-art" extra="true" region="jp">
         <path>./../../_theme_inc/images/background/jp/${system.theme}.jpg</path>
      </image>
   </view>


   <view name="basic, detailed">
      <image name="background" extra="true">
         <path>./black/default-detailed.png</path>
      </image>

      <image name="background-art" extra="true">
         <path>./black/background.jpg</path>
      </image>
   </view>

   <view name="grid">

      <image name="background" extra="true">
         <path>./black/default-grid.png</path>
      </image>

      <image name="background-art" extra="true">
         <path>./black/background.jpg</path>
      </image>
   </view>

   <view name="menu">
      <menuBackground name="menubg">
         <path>./black/fond_menu.png</path>
         <fadePath>./black/fond_menu_fade.png</fadePath>
      </menuBackground>

      <menuTextEdit name="menutextedit">
			<inactive>./../../_theme_inc/images/caja-texto-negra.png</inactive>
			<active>./../../_theme_inc/images/caja-texto-negra-activa.png</active>
      </menuTextEdit>
   </view>

</theme>